<Controls:MetroWindow x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Topmost="True"
        ShowIconOnTitleBar="True"
        TitleCaps="False"
        Title="Audio Downloader" Height="150" Width="800" ResizeMode="CanMinimize">
    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconPacks:PackIconModern Width="{TemplateBinding Width}"
                                      Height="{TemplateBinding Height}"
                                      Margin="5"
                                      Foreground="{DynamicResource IdealForegroundColorBrush}"
                                      Kind="CloudDownload" />
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button ToolTip="On-line help">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconModern Width="24" 
                                              Height="24" 
                                              Kind="BookPerspectiveHelp" />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid>
        <StackPanel>
            <Grid>
                <TextBox x:Name="Download" 
                         Margin="2,1,2,1"
                         Height="21"
                         BorderBrush="#FFBCBCBC"
                         Text="{Binding Model.DownloadLink, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding Model.IsInputEnabled, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Paste YouTube link and press Enter or Download button. Or type CLI followed by youtube-dl command" AcceptsReturn="False">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding DownloadButton}" />
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock IsHitTestVisible="False" 
                           Text="Paste YouTube link and press Enter or Download button" 
                           Padding="4,2,2,2" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Margin="1,0,0,0"
                           Height="21"
                           Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=Download}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <ComboBox Margin="2,1,2,1"
                      Name="MyComboBoxTest" 
                      IsEditable="False" 
                      IsReadOnly="True"
                      Height="21"
                      Padding="2"
                      BorderBrush="#FFBCBCBC"
                      ToolTip="Choose audio quality of the file."
                      ItemsSource="{Binding Model.Quality}" 
                      SelectedItem="{Binding Model.SelectedQuality}" 
                      IsSynchronizedWithCurrentItem="True">
            </ComboBox>
            <Button x:Name="button" 
                    Margin="2,1,2,1" 
                    Content="Download"
                    Height="21"
                    Background="#FFE5E5E5"
                    BorderBrush="#FFBCBCBC"
                    Command="{Binding DownloadButton}"
                    IsEnabled="{Binding Model.IsButtonEnabled, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Press Download button to get the file" 
                    Controls:ButtonHelper.PreserveTextCase="True"
                    Controls:ButtonHelper.CornerRadius="0" FontWeight="Normal" FontSize="12" Padding="0"/>
            <TextBox x:Name="textBox" 
                     Margin="2,1,2,1"
                     Height="21" 
                     TextWrapping="Wrap"
                     ToolTip="Current status of the program"
                     Padding="1"
                     BorderBrush="#FFBCBCBC"
                     Text="{Binding Model.StandardOutput, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" AcceptsReturn="True"/>
            <Controls:MetroProgressBar Margin="2,1,2,1"
                         Value="{Binding Model.ProgressBarPercent, UpdateSourceTrigger=PropertyChanged}"
                         Height="4"
                         Background="#FFE5E5E5"
                         BorderBrush="#FFBCBCBC"
                         Foreground="{DynamicResource AccentColorBrush}"
                         IsIndeterminate="{Binding Model.IsIndeterminate}" MinHeight="2" MinWidth="2" EllipseDiameter="4"/>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
