<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        mc:Ignorable="d"
        Topmost="True"
        Title="Mp3Downloader" Height="136" Width="800" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <Grid>
                <TextBox x:Name="Download" 
                         Margin="2,1,2,1"
                         Height="21"
                         BorderBrush="#FFBCBCBC"
                         Text="{Binding DownloadLink, UpdateSourceTrigger=PropertyChanged}"
                         IsEnabled="{Binding Model.IsInputEnabled, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Paste YouTube link and press Enter or Download button" AcceptsReturn="False">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding DownloadButton}" />
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock IsHitTestVisible="False" 
                           Text="Paste YouTube link and press Enter or Download button" 
                           Padding="4,2,2,2" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Margin="1,0,0,0"
                           Height="21"
                           Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=Download}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
            <ComboBox Margin="2,1,2,1"
                      Name="MyComboBoxTest" 
                      IsEditable="False" 
                      IsReadOnly="True"
                      Height="21"
                      Padding="2"
                      BorderBrush="#FFBCBCBC"
                      ToolTip="Choose audio quality of the mp3 file. 0 (The best) quality with largest file size, 9 (The worst) quality with smallest file size."
                      ItemsSource="{Binding Quality}" 
                      SelectedItem="{Binding SelectedQuality}" 
                      IsSynchronizedWithCurrentItem="True">
            </ComboBox>
            <Button x:Name="button" 
                    Margin="2,1,2,1" 
                    Content="Download"
                    Height="21"
                    Background="#FFE5E5E5"
                    BorderBrush="#FFBCBCBC"
                    Command="{Binding DownloadButton}"
                    IsEnabled="{Binding Model.IsButtonEnabled, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Press Download button to get the mp3 file"/>
            <TextBox x:Name="textBox" 
                     Margin="2,1,2,1"
                     Height="21" 
                     TextWrapping="Wrap"
                     ToolTip="Current status of the program"
                     Padding="1"
                     BorderBrush="#FFBCBCBC"
                     Text="{Binding Model.StandardOutput, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
            <ProgressBar Margin="2,1,2,1"
                         Value="{Binding Model.ProgressBarPercent, UpdateSourceTrigger=PropertyChanged}"
                         Height="2"
                         BorderBrush="#FFBCBCBC"
                         IsIndeterminate="{Binding Model.IsIndeterminate}"/>
        </StackPanel>
    </Grid>
</Window>
